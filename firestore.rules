rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is logged in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: Check if user is an admin
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/inspectors/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper: Check if inspection can still be edited (ONLY in-progress)
    function isEditable() {
      return resource.data.status == 'in-progress';
    }
    
    // Helper: Validate inspection data
    function isValidInspection() {
      let data = request.resource.data;
      return data.truckNumber is string
        && data.truckNumber.size() > 0
        && data.truckNumber.size() <= 50
        && data.status in ['in-progress', 'complete', 'gone']
        && data.inspector1 is string
        && data.inspector1.size() > 0;
    }
    
    // INSPECTORS COLLECTION
    // Anyone logged in can read (to see inspector list)
    // Only admins can add/edit/delete inspectors
    match /inspectors/{inspectorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // EMAIL RECIPIENTS COLLECTION
    // Anyone logged in can read
    // Only admins can add/edit/delete
    match /emailRecipients/{recipientId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // INSPECTIONS COLLECTION
    match /inspections/{inspectionId} {
      // Anyone logged in can read inspections
      allow read: if isSignedIn();
      
      // Create: Must be logged in and data must be valid
      allow create: if isSignedIn() && isValidInspection();
      
      // Update: ONLY if inspection is still "in-progress"
      // This fixes the bug where completed inspections could be edited!
      allow update: if isSignedIn() && isEditable();
      
      // Delete: Never allowed from client
      allow delete: if false;
    }
    
    // RATE LIMITS COLLECTION (for Cloud Function rate limiting)
    match /rateLimits/{docId} {
      allow read, write: if false; // Only accessible by Cloud Functions
    }
  }
}
