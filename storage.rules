rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /inspections/{inspectionId}/{allPaths=**} {
      // Allow read for all users (photos need to be viewable in admin panel and by inspectors)
      allow read: if true;
      
      // Allow write for all users
      // TODO: Add Firebase Authentication in Phase 2 and restrict writes to authenticated users
      // Example: allow write: if request.auth != null;
      allow write: if request.resource.size < 5 * 1024 * 1024  // Max 5MB per file
                   && request.resource.contentType.matches('image/.*');  // Only allow images
    }
  }
}
